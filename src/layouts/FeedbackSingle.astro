---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "./components/ImageMod.astro";
import { render } from "astro:content";

const { feedback } = Astro.props;

const { Content } = await render(feedback);
const { title, image } = feedback.data;
---

<section class="section pt-7">
  <div class="container">
    <div class="row justify-center">
      <article class="lg:col-10">
        {
          image && (
            <div class="mb-10">
              <ImageMod
                src={image}
                height={500}
                width={1200}
                alt={title}
                class="w-full rounded"
                format="webp"
              />
            </div>
          )
        }
        <h1 set:html={markdownify(title)} class="h2 mb-4" />
        <div class="content mb-10">
          <Content />
        </div>
      </article>
      <div class="mt-10 lg:col-3 flex justify-center">
        <a href="/feedback/" class="btn btn-outline-primary">
          Zur√ºck zu Kundenstimmen
        </a>
      </div>
    </div>
  </div>
</section>
