---
import { markdownify } from "@/lib/utils/textConverter";
const { text_block } = Astro.props;
---

{
  (
    <section class="mb-16">
      <div class="container">
        <div class="rounded-xl bg-theme-light px-4 py-16 dark:bg-darkmode-theme-light xl:p-20">
          <div class="row">
            <div class="w-full ">
              <h2 set:html={markdownify(text_block.data.title)} class="mb-4" />
              <p
                set:html={markdownify(text_block.data.content)}
                class="mb-4 text-justify"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
