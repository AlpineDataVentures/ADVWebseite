---
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";

// CoreValues.astro
export interface CoreValue {
  title: string;
  icon: string;
  description: string;
}

interface Props {
  core_values: CoreValue[];
}

const { core_values } = Astro.props;
---

{
  (
    <section class="mb-8">
      <div class="container">
        <div class="flex w-full items-center justify-center rounded-xl p-4 sm:p-16">
          <div class="grid grid-cols-4 gap-6 gap-y-12 lg:grid-cols-12">
            {Array.isArray(core_values) &&
              core_values.map((value) => (
                <div class="col-span-4">
                  <div class="flex flex-col items-center gap-4 text-center">
                    <div class="flex items-center rounded bg-emerald-500 p-2 text-white">
                      <DynamicIcon className="w-12 h-12" icon={value.icon} />
                    </div>
                    <div class="flex w-full min-w-0 flex-col items-center justify-center gap-0 text-base">
                      <h3 class="mb-2 py-2 text-lg leading-6 text-slate-700">
                        {value.title}
                      </h3>
                      <p class="text-slate-500">{value.description}</p>
                    </div>
                  </div>
                </div>
              ))}
          </div>
        </div>
      </div>
    </section>
  )
}
