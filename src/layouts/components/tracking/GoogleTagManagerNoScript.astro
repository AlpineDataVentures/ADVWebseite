---
// Astro Component, which encapsulates the Google Tag Manager
// this component is used if JavaScript is deactivated

export interface Props {
  id: string; // GTM Container-ID
  domain?: string; // optional, Standard: Google GTM
}

const { id, domain = "https://www.googletagmanager.com" } = Astro.props;
---

<!-- GTM NoScript â€“ nur bei deaktiviertem JS, direkt nach <body> -->
<noscript>
  <iframe
    src={`${domain}/ns.html?id=${id}`}
    height="0"
    width="0"
    style="display:none;visibility:hidden"></iframe>
</noscript>
